<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <CheckBox
            android:text="квартира"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/expenseCheckbox" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="101dp"
            android:layout_height="41dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/amount"
            app:layout_constraintTop_toTopOf="@+id/expenseCheckbox"
            app:layout_constraintBottom_toBottomOf="@+id/expenseCheckbox" app:layout_constraintVertical_bias="0.0"
            android:text="100 грн" android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>